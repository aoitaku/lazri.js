{
  "name": "lazri",
  "version": "1.0.0",
  "description": "JavaScript Implementation for Lazri lightweight structured text format.",
  "type": "module",
  "types": "./types/lazri.d.ts",
  "files": [
    "lib",
    "esm",
    "types"
  ],
  "bin": {
    "lazri": "./bin/lazri.js"
  },
  "main": "./lib/lazri.js",
  "module": "./esm/lazri.js",
  "exports": {
    ".": {
      "import": "./esm/lazri.js",
      "require": "./lib/lazri.js",
      "node": "./esm/lazri.js"
    }
  },
  "scripts": {
    "build-parser": "peggy -o ./src/parser.js ./src/grammar/lazri.pegjs --format es",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview"
  },
  "devDependencies": {
    "peggy": "^2.0.1",
    "typescript": "^4.6.4",
    "vite": "^3.1.0"
  },
  "dependencies": {
    "commander": "^9.4.1"
  }
}
